{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "lib": ["dom", "es6", "es2017"],
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "classnames",
      "jest",
      "lodash",
      "moment",
      "node",
      "react",
      "react-dom",
      // "storybook__react",
      "styled-components"
    ]
  },
  "include": ["src/**/*", "stories/**/*"]
}
