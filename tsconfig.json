{
  "compilerOptions": {
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "lib": ["dom", "es6", "es2017"],
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@testing-library/jest-dom",
      "classnames",
      "jest",
      "lodash",
      "moment",
      "node",
      "react",
      "react-dom",
      "styled-components"
    ]
  },
  "include": ["src/**/*", "stories/**/*", "typings/**/*"]
}
